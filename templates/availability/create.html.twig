{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Création de disponibilité
{% endblock %}

{% block body %}

	<div class="container">

		<h1>Création d'une nouvelle disponibilité</h1>

		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.vehicle) }}
			{{ form_widget(form.vehicle) }}
		</div>

		<div class="form-group">
			{{ form_label(form.start_date) }}
			{{ form_widget(form.start_date) }}
		</div>

		<div class="form-group">
			{{ form_label(form.end_date) }}
			{{ form_widget(form.end_date) }}
		</div>

		<div class="form-group">
			{{ form_label(form.price_per_day) }}
			{{ form_widget(form.price_per_day) }}
		</div>

		<div class="form-group">
			{{ form_label(form.status) }}
			{{ form_widget(form.status) }}
		</div>

		{{ form_end(form) }}
	</div>

{% endblock %}

